.category-img {
	width: 224rpx;
	margin: 0;
	padding: 5rpx 5rpx;
	height: 150rpx;
	border-radius: 10rpx;
	line-height: 0;
	overflow: hidden;
	position: relative;
}
.category-img image {
	margin: 0;
	width: 224rpx !important;
	height: 150rpx;
	position: absolute;
	border-radius: 10rpx !important;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	    -ms-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	-o-object-fit: cover;
	   object-fit: cover;
}
.category-img view {
	line-height: 48rpx;
	font-size: 30rpx;
	margin: 0;
	padding: 0;
	position: absolute;
	z-index: 1;
	width: 100%;
	overflow: hidden;
	background-color: rgba(0, 0, 0, 0.3);
	color: white;
	text-align: center;
	bottom: 0
}
