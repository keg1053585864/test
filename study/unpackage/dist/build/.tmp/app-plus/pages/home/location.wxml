<view><swiper class="grace-swiper swiper2" style="height:276rpx;" autoplay="true" indicator-color="rgba(255, 255, 255, 1)" indicator-active-color="#00B26A" interval="5000"><swiper-item><view style="width:100%;height:170px;overflow:hidden;"><image style="width:100%;height:170px;object-fit:cover;transform:translateY(-25%);" src="{{location.location_head_img_url}}" mode="widthFix"></image><view class="title">{{location.location}}</view></view></swiper-item></swiper><view><view class="grace-tab"><scroll-view class="grace-tab-title" scroll-x="{{true}}" scroll-into-view="{{titleShowId}}"><block wx:for="{{tabs}}" wx:for-item="tab" wx:for-index="index" wx:key="index"><view class="{{[tabCurrentIndex===index?'grace-tab-current text-lg text-bold border-color-'+customTheme+' text-'+customTheme:'']}}" id="{{'tabTag-'+index}}" data-event-opts="{{[['tap',[['tabChange',['$event']]]]]}}" bindtap="__e">{{tab.name+''}}</view></block></scroll-view><swiper class="grace-tab-swiper" current="{{swiperCurrentIndex}}" data-event-opts="{{[['change',[['swiperChange',['$event']]]]]}}" bindchange="__e"><swiper-item><block wx:for="{{location.items}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['itemJump',[index]]]]]}}" class="grace-card-view margin" style="box-shadow:0 8rpx 25rpx 0 rgba(0, 0, 0, 0.2);" bindtap="__e"><view style="width:100%;height:300rpx;overflow:hidden;position:relative;"><image style="width:100%;height:300rpx;margin:auto;position:absolute;top:0;left:0;bottom:0;right:0;object-fit:cover;" src="{{item.item_head_img_url}}" mode="widthFix"></image></view><view class="card-content">{{''+item.item_name+''}}</view><view class="footer"><view class="grace-icons icon-home">{{'天数：'+item.duration}}</view><view class="grace-icons icon-share">{{'地点：'+location.location}}</view></view></view></block></swiper-item></swiper></view></view></view>