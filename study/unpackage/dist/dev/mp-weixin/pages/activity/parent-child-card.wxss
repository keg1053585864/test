.like {
		animation: sizeChange 2.5s infinite reverse;
}
@-webkit-keyframes sizeChange {
0% {
			-webkit-transform: scale(1.4);
			        transform: scale(1.4);
			opacity: 1;
}
50% {
			-webkit-transform: scale(1.8);
			        transform: scale(1.8);
			opacity: .75;
}
100% {
			-webkit-transform: scale(1.4);
			        transform: scale(1.4);
			opacity: 1;
}
}
