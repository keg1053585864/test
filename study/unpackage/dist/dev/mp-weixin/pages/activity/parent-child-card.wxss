
.grace-tab-swiper {
		height: 100%;
		position: absolute;
		padding-bottom: 150rpx;
}
.tab-img {
		overflow: auto;
		padding: 8rpx 0;
}
.tab-img image {
		width: 100%;
}

	/*tab1*/
.title-icon {
		border-radius: 10rpx;
		padding: 0;
		margin: 6rpx 20rpx 15rpx 20rpx;
		overflow: hidden;
}
.title-icon .info {
		-webkit-box-shadow: none;
		        box-shadow: none;
		border-bottom: 2rpx solid #f3f4f6;
}
.grace-icons {
		font-size: 24rpx !important
}
.dividing-line {
		width: 100%;
		height: 5px;
		background: #f3f4f6;
		margin: 0;
}
.teacher-card {
		
		width: 90%;
		margin: 0 auto;
}
.teacher-card .desc {
		margin-top: 14rpx;
		color: black
}
.teacher-card .tab {
		color: white;
		background-color: #3688FF;
		border-radius: 40rpx;
		padding: 8rpx 20rpx;
		margin-right: 20rpx
}
.avatarImg {
		width: 50rpx !important;
		height: 50rpx !important;
		
		border-radius: 50rpx
}
.content1 {
		padding: 12px;
		text-align: center;
		line-height: 50px;
		border-bottom-left-radius: 5px;
		border-bottom-right-radius: 5px;
}
.content1 .title {
		padding-left: 15rpx;
		margin-top: 20rpx
}
.content1 .text {
		padding-left: 15rpx
}

	/*tab3*/
.content2 {
		word-wrap: break-word
}

	/*tab3*/
.priceNotes {
		margin-left: 12rpx;
		width: 100%
}
.priceNotes .cu-bar {
		min-height: 80rpx
}
.priceNotes+view {
		word-wrap: break-word
}

	/* 图片形式 */
.footer-option .submit {
		width: 40%
}
.inputTitle .grace-items {
		border-radius: 4px;
		line-height: 50px;
		color: #3688FF;
		padding: 5px 15px
}
.inputTitle .grace-label {
		float: left;
		color: #3688FF
}
.inputTitle .grace-dialog-btns button {
		font-size: 30rpx
}
