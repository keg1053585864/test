.dividing-line {
  width: 100%;
  height: 5px;
  background: #f3f4f6;
  margin: 0;
}
.teacher-card {

  width: 90%;
  margin: 0 auto;
}
.teacher-card .desc {
  margin-top: 14rpx;
  color: black
